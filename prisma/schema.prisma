generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH TABLES (Unchanged)
// ============================================

model User {
  id             String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email          String          @unique
  name           String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  socialAccounts SocialAccount[]
  emailVerified  Boolean         @default(false)
  image          String?
  sessions       Session[]
  accounts       Account[]
  phoneNumber    String?
  language       String          @default("en")
  timezone       String          @default("UTC+00:00")

  location       String?         @default("India")
  // Onboarding fields
  niche          String?
  subNiche       String?

  // Plan & Stella relations
  subscriptions      Subscription[]
  stellaTransactions StellaTransaction[]
  featureAllowances  FeatureAllowance[]
  wallet             Wallet?
  analysisJobs       AnalysisJob[]
  payments           Payment[]
  
  // AI Consultant
  conversations      Conversation[]
  automationSettings AutomationSettings?

  // Referral system
  referralCode  String?  @unique              // User's own shareable code e.g. "yash-a3f2"
  referredById  String?  @db.Uuid             // FK â†’ User who referred this user
  referredBy    User?    @relation("Referrals", fields: [referredById], references: [id])
  referrals     User[]   @relation("Referrals")
  commissions   Commission[]                  // Commissions earned by this user as referrer

  @@map("user")
}

model Session {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accountId             String
  providerId            String
  userId                String    @db.Uuid
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ============================================
// SOCIAL ACCOUNT
// ============================================

model SocialAccount {
  id         String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId     String     @db.Uuid
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  username   String
  researches Research[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("social_account")
}

// ============================================
// RESEARCH CONTAINER
// ============================================

model Research {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  socialAccountId String        @db.Uuid
  socialAccount   SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)
  createdAt       DateTime      @default(now())

  // Relations to research data containers
  scriptSuggestions  ScriptSuggestions?
  overallStrategy    OverallStrategy?
  userResearch       UserResearch?
  competitorResearch CompetitorResearch?
  nicheResearch      NicheResearch?
  twitterResearch    TwitterResearch?

  @@map("research")
}

// ============================================
// RESEARCH DATA CONTAINERS (JSON Storage)
// ============================================

// AI-generated script suggestions
model ScriptSuggestions {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  researchId String   @unique @db.Uuid
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  scripts   Json // Array of script suggestion objects
  createdAt DateTime @default(now())

  @@map("script_suggestions")
}

// Overall strategy insights
model OverallStrategy {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  researchId String   @unique @db.Uuid
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full overall_strategy object
  createdAt DateTime @default(now())

  @@map("overall_strategy")
}

// User's own Instagram research
model UserResearch {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  researchId String   @unique @db.Uuid
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full user_research_json object
  createdAt DateTime @default(now())

  @@map("user_research")
}

// Competitor analysis research
model CompetitorResearch {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  researchId String   @unique @db.Uuid
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full competitor_research_json object
  createdAt DateTime @default(now())

  @@map("competitor_research")
}

// Niche/FYP research
model NicheResearch {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  researchId String   @unique @db.Uuid
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full niche_research_json object
  createdAt DateTime @default(now())

  @@map("niche_research")
}

// Twitter research (both latest and top)
model TwitterResearch {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  researchId String   @unique @db.Uuid
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  latestData Json // twitterLatest_research_json
  topData    Json // twitterTop_research_json
  createdAt  DateTime @default(now())

  @@map("twitter_research")
}

// ============================================
// ENUMS FOR PLANS & SUBSCRIPTIONS
// ============================================


enum BillingPeriod {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
  EXPIRED
  PENDING
}

enum StellaBucket {
  MONTHLY // Expires at end of billing cycle
  TOPUP // Never expires
}

enum StellaReason {
  MONTHLY_GRANT // Monthly stellas from subscription
  TOPUP_PURCHASE // Purchased top-up stellas
  FEATURE_USAGE // Stellas consumed by feature usage
  REFUND // Refunded stellas
  ADMIN_ADJUSTMENT // Manual admin adjustment
  EXPIRY // Monthly stellas expired
}

enum Feature {
  AI_CONSULTANT
  COMPETITOR_ANALYSIS
  AUTO_ANALYSIS
}

enum AnalysisJobStatus {
  PENDING    // Job created, waiting to start
  PROCESSING // External service is processing
  COMPLETED  // Analysis finished successfully
  FAILED     // Analysis failed
}

// ============================================
// ANALYSIS JOBS
// ============================================

// Tracks async analysis jobs for polling
model AnalysisJob {
  id              String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String            @db.Uuid
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  socialAccountId String            @db.Uuid
  status          AnalysisJobStatus @default(PENDING)
  stellaCost      Int               // Credits to deduct on completion
  externalJobId   String?           // ID from external analysis service
  errorMessage    String?           // Error details if failed
  createdAt       DateTime          @default(now())
  completedAt     DateTime?
  billingFinalized Boolean @default(false)

  @@index([userId])
  @@index([userId, status])
  @@map("analysis_job")
 
}

// ============================================
// AUTOMATION SETTINGS
// ============================================

model AutomationSettings {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String   @unique @db.Uuid
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  competitors     String[] @default([])
  writingStyle    String   @default("let ai decide")
  scriptLanguage  String   @default("English")
  captionLanguage String   @default("English")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("automation_settings")
}

// ============================================
// WEBHOOK IDEMPOTENCY
// ============================================

model WebhookEvent {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  webhookId       String   @unique // WEBHOOK-ID from DodoPayments header
  eventType       String   // e.g., "payment.succeeded", "subscription.active"
  payload         Json     // Store full payload for debugging
  processedAt     DateTime @default(now())
  createdAt       DateTime @default(now())

  @@index([webhookId])
  @@index([eventType])
  @@map("webhook_event")
}

// ============================================
// AI CONSULTANT - CHAT STORAGE
// ============================================

enum MessageRole {
  USER
  ASSISTANT
}

model Conversation {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String?  // Auto-generated from first message or user-set
  summary   String?  @db.Text // Conversation summary for token efficiency
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  messages  Message[]
  
  @@index([userId])
  @@index([userId, updatedAt(sort: Desc)]) // For listing user's conversations
  @@map("conversation")
}

model Message {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  conversationId String       @db.Uuid
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  role           MessageRole
  content        String       @db.Text
  
  // Context tracking (for analytics)
  contextsUsed   String[]     @default([])
  
  createdAt      DateTime     @default(now())
  
  @@index([conversationId])
  @@index([conversationId, createdAt]) // For ordered retrieval
  @@map("message")
}

// ============================================
// PLANS & SUBSCRIPTIONS
// ============================================


enum PaymentType {
  SUBSCRIPTION // Recurring (Silver, Gold)
  ONE_TIME     // Single charge (Credit Bundles)
}

// 2. ONE-TIME BUNDLES (The "Definition" of a top-up)
model StellaBundle {
  id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String // "Starter Pack", "Pro Pack"
  stellaAmount Int    // 500
  isActive     Boolean @default(true) 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  paymentProducts PaymentProduct[]

  @@map("stella_bundle")
}

// Predefined, static plans
model Plan {
  id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String @unique // silver, gold, platinum
  tier Int // Numeric tier, higher = more powerful

  // Monthly stellas granted
  monthlyStellasGrant Int

  // Payment type
  paymentType PaymentType @default(SUBSCRIPTION)

  // Feature capabilities
  competitorAnalysisAccess Boolean @default(false)
  aiConsultantAccess       Boolean @default(false)
  dailyAutoAnalysisEnabled Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  paymentProducts PaymentProduct[]
  subscriptions   Subscription[]

  @@map("plan")
}

// Maps external payment provider product to internal plan
model PaymentProduct {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  type PaymentType // SUBSCRIPTION or ONE_TIME

  // Polymorphic Relations (Only one should be set)
  planId   String? @db.Uuid
  plan     Plan?   @relation(fields: [planId], references: [id])
  
  bundleId String?       @db.Uuid
  bundle   StellaBundle? @relation(fields: [bundleId], references: [id])

  // External Payment Provider Details
  providerName      String // "dodo"
  providerProductId String @unique 
  
  billingPeriod     BillingPeriod? // Null for ONE_TIME
  price             Int 
  currency          String 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payment_product")
}

// Tracks user's current subscription (webhook-driven)
model Subscription {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  planId String @db.Uuid
  plan   Plan   @relation(fields: [planId], references: [id])

  providerName           String // e.g. "dodo"
  providerSubscriptionId String             @unique // Unique external subscription ID
  status                 SubscriptionStatus
  currentPeriodEnd       DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("subscription")
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}
// Immutable financial record of payments
model Payment {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  userId  String @db.Uuid
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  providerPaymentId String  @unique // Prevent duplicate payment records
  amount            Decimal @db.Decimal(10, 2)
  currency          String  @default("USD")
  status            PaymentStatus
  subscriptionId    String? // If this payment is for a subscription
  invoiceUrl        String?
  metadata          Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("payment")
}

// ============================================
// STELLA CREDIT SYSTEM (Ledger-based)
// ============================================

model Wallet {
  id      String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId  String @unique @db.Uuid
  user    User   @relation(fields: [userId], references: [id])

  monthlyBalance Int @default(0) // Resets on cycle
  topupBalance   Int @default(0) // Permanent

  updatedAt      DateTime @updatedAt

  @@map("wallet")
}

enum StellaTransactionStatus {
  HELD       // reserved, not finalized
  SETTLED    // finalized spend / grant
  RELEASED   // reversed hold
}

// Ledger-based credit transactions - no balances stored
model StellaTransaction {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  amount      Int // Positive for credits, negative for debits
  bucket      StellaBucket // MONTHLY or TOPUP
  reason      StellaReason

  // [MODIFIED] METADATA FOR AUDIT
  // Store specific details here: { "researchId": "...", "competitorsAnalyzed": 4 }
  metadata Json?

  referenceId String? // Optional reference (e.g. subscription ID, purchase ID)

  createdAt DateTime @default(now())

  status StellaTransactionStatus @default(SETTLED)

  @@index([userId])
  @@index([userId, bucket])
  @@map("stella_transaction")
}

// ============================================
// FEATURE ALLOWANCES
// ============================================

// Tracks free/promotional usage for specific features
model FeatureAllowance {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  feature      Feature
  totalAllowed Int // Total free uses allowed
  consumedUses Int       @default(0) // Uses consumed
  expiresAt    DateTime? // Optional expiry

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // One allowance per user per feature
  @@unique([userId, feature])
  @@index([userId])
  @@map("feature_allowance")
}

// ============================================
// REFERRAL & COMMISSION SYSTEM
// ============================================

enum CommissionStatus {
  PENDING   // Earned, not yet paid out
  PAID      // Paid out to referrer
  CANCELLED // Refunded or reversed
}

/// One row is created the first time a referred user makes a paid purchase.
/// `referrerId` is the person who shared the link; `referredUserId` is the buyer.
model Commission {
  id             String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  referrerId     String           @db.Uuid
  referrer       User             @relation(fields: [referrerId], references: [id])

  referredUserId String           @db.Uuid  // The user whose purchase triggered this

  paymentId      String           // providerPaymentId for traceability

  commissionPct  Decimal          @db.Decimal(5, 2)   // e.g. 10.00
  amount         Decimal          @db.Decimal(10, 2)  // Commission amount in payment currency
  currency       String

  status         CommissionStatus @default(PENDING)
  createdAt      DateTime         @default(now())

  @@index([referrerId])
  @@map("commission")
}
