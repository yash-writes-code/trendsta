generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH TABLES (Unchanged)
// ============================================

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  name           String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  socialAccounts SocialAccount[]
  emailVerified  Boolean         @default(false)
  image          String?
  sessions       Session[]
  accounts       Account[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ============================================
// SOCIAL ACCOUNT
// ============================================

model SocialAccount {
  id         String     @id @default(uuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  username   String
  researches Research[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("social_account")
}

// ============================================
// RESEARCH CONTAINER
// ============================================

model Research {
  id              String        @id @default(uuid())
  socialAccountId String
  socialAccount   SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)
  createdAt       DateTime      @default(now())

  // Relations to research data containers
  scriptSuggestions  ScriptSuggestions?
  overallStrategy    OverallStrategy?
  userResearch       UserResearch?
  competitorResearch CompetitorResearch?
  nicheResearch      NicheResearch?
  twitterResearch    TwitterResearch?

  @@map("research")
}

// ============================================
// RESEARCH DATA CONTAINERS (JSON Storage)
// ============================================

// AI-generated script suggestions
model ScriptSuggestions {
  id         String   @id @default(uuid())
  researchId String   @unique
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  scripts   Json // Array of script suggestion objects
  createdAt DateTime @default(now())

  @@map("script_suggestions")
}

// Overall strategy insights
model OverallStrategy {
  id         String   @id @default(uuid())
  researchId String   @unique
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full overall_strategy object
  createdAt DateTime @default(now())

  @@map("overall_strategy")
}

// User's own Instagram research
model UserResearch {
  id         String   @id @default(uuid())
  researchId String   @unique
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full user_research_json object
  createdAt DateTime @default(now())

  @@map("user_research")
}

// Competitor analysis research
model CompetitorResearch {
  id         String   @id @default(uuid())
  researchId String   @unique
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full competitor_research_json object
  createdAt DateTime @default(now())

  @@map("competitor_research")
}

// Niche/FYP research
model NicheResearch {
  id         String   @id @default(uuid())
  researchId String   @unique
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  data      Json // Full niche_research_json object
  createdAt DateTime @default(now())

  @@map("niche_research")
}

// Twitter research (both latest and top)
model TwitterResearch {
  id         String   @id @default(uuid())
  researchId String   @unique
  research   Research @relation(fields: [researchId], references: [id], onDelete: Cascade)

  latestData Json // twitterLatest_research_json
  topData    Json // twitterTop_research_json
  createdAt  DateTime @default(now())

  @@map("twitter_research")
}
